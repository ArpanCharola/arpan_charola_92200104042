// backend/prisma/product.prisma (MongoDB Products Schema)

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-mongo"
}

// MongoDB Datasource
datasource db {
  provider = "mongodb" 
  url      = env("DATABASE_URL")
}

// Model for the main product catalog (MongoDB)
model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  sku        String   @unique 
  price      Float
  description String?
  category   String
  stock      Int      @default(0)
  isFeatured Boolean  @default(false)
  imageUrls  String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}